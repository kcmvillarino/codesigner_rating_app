<% layout('layout') %>
   

<div class="container">
    <br><br>
    <div class="text-center reg_msg">
        <h1><a href="/">RateMe</a></h1>
    </div>
   <br><br>
   
  

   <div class="text-center reg_msg">
        <h2 class="fancy"><span>Edit User</span></h2>
   </div><br>
    <div class="row signup">
        
        <% if(hasErrors) {%>
            <% for(var i = 0; i <messages.length; i++) {%>
                <div class="alert alert-danger">
                   <a href="#" class="close" data-dismiss="alert" aria-label="close">
                       &times;
                   </a>
                   <%= messages[i] %>
                    
                </div>
            <% } %>
        <% } %>

        <% if(updated) {%>
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">
                    &times;
                </a>
                Updated!
                 
             </div>
        <%} %>

        <form method="POST" class="" id="signupForm" action="/user/update">

            <div class="row">
                <div class="form-group col-xs-12 input_group">
                    <input id="fullname" class="form-control" name="fullname" value="<%= user.fullname %>" type="text" autocomplete="on" placeholder="FULLNAME" style="margin-top: 50px; margin-bottom:20px;" >
                </div>
            </div>

            <div class="form-group input_group">
                <input id="email" class="form-control" name="email" value="<%= user.email %>" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
            </div>

            <div class="form-group">
                <input type="submit" id="submit" value="SIGN UP" class="form-control btn btn-primary" name="submit" style="">
            </div>

          </form>



    </div>
</div>
